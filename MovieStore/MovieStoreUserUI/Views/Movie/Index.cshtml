<div class="container-fluid">
    <div class="row">
        @foreach (var movie in Model)
        {
            <div class="list-group col-md-4 col-lg-4">
                <div class="main col img-container">
                    <a href="#" class="image" data-toggle="modal" data-target="#videoModal" data-theVideo="@Html.DisplayFor(modelItem => movie.TrailerUrl)"><img src="@Html.DisplayFor(modelItem => movie.ImageUrl)" class="img-responsive" alt="No Cover" style="width: 100%; height: 100%"></a>
                    <div class="col-md-6 col-lg-6">
                        <a href="/User/Order/Buy/@movie.Id" class="btn btn-success btn-block" role="button">Buy</a>
                    </div>
                    <div class="col-md-6 col-lg-6">
                        <a href="/User/Movie/Details/@movie.Id" class="btn btn-default btn-block " role="button">Details</a>
                    </div>
                    <div class="col-md-offset-5">
                        <p style="font-size:150%">Price: @Html.DisplayFor(modelItem => movie.Price)</p">
                    </div>
                </div>
            </div>
            columns++;
            if (columns % 4 == 0)
            { <div class="clearfix visible-lg"></div> }
            if (columns % 3 == 0)
            { <div class="clearfix visible-md"></div> }
        }
        <div class="clearfix"></div>
    </div>
</div>

<div class="modal fade" id="videoModal" tabindex="-1" role="dialog" aria-labelledby="videoModal" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <div class="video-container">
                    <iframe src="" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>
</div>

