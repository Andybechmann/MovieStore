@model MovieStoreUserUI.Models.ShoppingCart

@{
    ViewBag.Title = "Index";
}

<h2>Cart</h2>

<table class="table">
    <tr>
        <th>Movie</th>
        <th>Amount</th>
        <th></th>
    </tr>

@foreach (var item in Model.GetOrderLines()) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Movie.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new {  id=item.Movie.Id })
        </td>
    </tr>
}

</table>
<div>
    <a href="/User/Customers/Create" class="btn btn-success btn-block" role="button">Checkout <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span></a>
</div>